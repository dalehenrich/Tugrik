*Tugrik-Core
computeTugrikDataBytes
	| queryDictionary |
	queryDictionary := Dictionary new
		at: '$query' put: mongoQuery where;
		yourself.
	mongoQuery order ifNotNil: [ queryDictionary at: '$orderby' put: mongoQuery order ].
	^ mongoQuery fields
		ifNotNil: [ 
			STON
				toString:
					{queryDictionary.
					(mongoQuery fields)} ]
		ifNil: [ STON toString: queryDictionary ]